<% layout("./layouts/boilerplate.ejs") %>
<div class="bar">
  <form
    id="filters-form"
    action="/listings/filter"
    method="get"
    enctype="application/x-www-form-urlencoded"
  >
    <div class="filter">
      <input type="radio" id="castles" name="category" value="castles" <%
      if(category === 'castles') { %>checked<% } %>
      onchange="this.form.submit()" />
      <label for="castles">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </label>
    </div>
    <div class="filter">
      <input type="radio" id="amazing-pools" name="category"
      value="amazing-pools" <% if(category === 'amazing-pools') { %> checked <%
      } %> onchange="this.form.submit()" />
      <label for="amazing-pools">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Amazing pools</p>
      </label>
    </div>
    <div class="filter">
      <input type="radio" id="beachfront" name="category" value="beachfront" <%
      if(category === 'beachfront') { %>checked<% } %>
      onchange="this.form.submit()" />
      <label for="beachfront">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beachfront</p>
      </label>
    </div>
    <div class="filter">
      <input type="radio" id="golfing" name="category" value="golfing" <%
      if(category === 'golfing') { %>checked<% } %>
      onchange="this.form.submit()" />
      <label for="golfing">
        <div><i class="fa-solid fa-golf-ball-tee"></i></div>
        <p>Golfing</p>
      </label>
    </div>
    <div class="filter">
      <input type="radio" id="trending" name="category" value="trending" <%
      if(category === 'trending') { %>checked<% } %>
      onchange="this.form.submit()" />
      <label for="trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </label>
    </div>
    <div class="filter">
      <input type="radio" id="lake" name="category" value="lake" <% if(category
      === 'lake') { %>checked<% } %> onchange="this.form.submit()" />
      <label for="lake">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lake</p>
